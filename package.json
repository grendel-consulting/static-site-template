{
  "name": "static-site-template",
  "version": "0.1.9",
  "description": "Good practise opinionated template for building static sites using GatsbyJS",
  "repository": "https://github.com/grendel-consulting/static-site-template.git",
  "author": "ramirezj <ramirezj@users.noreply.github.com>",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "@commitlint/cli": "9.1.2",
    "@commitlint/config-conventional": "9.1.2",
    "husky": "4.2.5",
    "lint-staged": "10.2.11",
    "prettier": "2.0.5",
    "snazzy": "8.0.0",
    "standard": "14.3.4",
    "standard-markdown": "6.0.0",
    "standard-version": "8.0.2",
    "stylelint": "13.6.1",
    "stylelint-config-standard": "20.0.0"
  },
  "scripts": {
    "release": "standard-version"
  },
  "engines": {
    "node": ">=0.10"
  },
  "browserslist": {
    "production": [
      "last 2 versions",
      "not dead",
      ">0.5%"
    ],
    "ssr": [
      "node 10",
      "node 12"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "signed-off-by": [
        1,
        "always",
        "Signed-off-by:"
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{css}": [
      "prettier --write",
      "stylelint --fix --allow-empty-input"
    ],
    "*.{js,jsx}": "standard --fix | snazzy",
    "*.{json}": "prettier --write",
    "*.{md}": [
      "prettier --write",
      "standard-markdown"
    ]
  },
  "renovate": {
    "extends": [
      "config:base",
      ":pinAllExceptPeerDependencies",
      "schedule:nonOfficeHours"
    ],
    "labels": [
      "dependencies"
    ],
    "postUpdateOptions": [
      "yarnDedupeHighest"
    ],
    "timezone": "Europe/London",
    "vulnerabilityAlerts": {
      "labels": [
        "security"
      ],
      "assignees": [
        "@ramirezj"
      ]
    }
  }
}
