{
  "name": "static-site-template",
  "version": "0.1.2",
  "description": "Good practise opinionated template for building static sites using GatsbyJS",
  "repository": "https://github.com/grendel-consulting/static-site-template.git",
  "author": "ramirezj <ramirezj@users.noreply.github.com>",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "husky": "^4.2.5",
    "snazzy": "^8.0.0",
    "standard": "^14.3.3",
    "standard-markdown": "^6.0.0",
    "standard-version": "^7.1.0"
  },
  "scripts": {
    "format": "standard --fix",
    "release": "standard-version"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "signed-off-by": [
        1,
        "always",
        "Signed-off-by:"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "standard --fix | snazzy",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "renovate": {
    "extends": [
      "config:base",
      ":pinAllExceptPeerDependencies",
      "schedule:nonOfficeHours"
    ]
  }
}
